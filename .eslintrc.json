{
	"extends": ["plugin:@wordpress/eslint-plugin/recommended"],
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"globals": {
		"wp": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-console": "warn",
		"no-unused-vars": "error",
		"no-undef": "error",
		"jsdoc/empty-tags": "off"
	}
}
