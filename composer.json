{
    "name": "theaminuli/hello-plus",
    "description": "Hello Plus is a lightweight, fast, and customizable WordPress theme built for speed and flexibility",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "theaminuli"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "format": "phpcbf",
        "check": "phpcs --runtime-set ignore_warnings_on_exit 1",
        "check:summary": "phpcs --report=summary",
        "install-codestandards": [
            "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/php-compatibility"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}