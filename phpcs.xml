<?xml version="1.0"?>
<ruleset name="Hello Plus WordPress Coding Standards">
    <description>Coding standards configuration for Hello Plus WordPress theme</description>

    <!-- Files to check - Only PHP files -->
    <file>.</file>

    <!-- Exclude vendor and node_modules directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/.git/*</exclude-pattern>
    <exclude-pattern>*/.github/*</exclude-pattern>
    
    <!-- Exclude non-PHP files -->
    <exclude-pattern>*.js</exclude-pattern>
    <!-- Exclude common directories -->
    <exclude-pattern>*/assets/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/dist/*</exclude-pattern>

    <!-- Show sniff codes in all reports -->
    <arg value="ps"/>

    <!-- Use colors in output -->
    <arg name="colors"/>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Set the minimum supported PHP version -->
    <config name="minimum_supported_wp_version" value="6.0"/>

    <!-- Include WordPress coding standards -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        
        <!-- Exclude some spacing rules that might conflict with modern PHP -->
        <exclude name="PEAR.Functions.FunctionCallSignature.Indent"/>
    </rule>

    <!-- Check for PHP compatibility -->
    <rule ref="PHPCompatibility"/>
    
    <!-- Set minimum PHP version for compatibility check -->
    <config name="testVersion" value="7.4-"/>

    <!-- WordPress specific rules -->
    <rule ref="WordPress.Files.FileName">
        <properties>
            <property name="strict_class_file_names" value="false"/>
        </properties>
    </rule>
    <!-- Verify that the text_domain is set to the desired text-domain.
		 Multiple valid text domains can be provided as a comma-delimited list. -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="hello-plus"/>
		</properties>
	</rule>
    
    <!-- Allow theme-specific naming conventions -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="hello_plus"/>
                <element value="helloplus"/>
            </property>
        </properties>
    </rule>
</ruleset>
