{
	"name": "hello-plus",
	"private": true,
	"version": "1.0.0",
	"description": "Hello Plus is a lightweight, fast, and customizable WordPress theme built for speed and flexibility",
	"author": "theaminuli",
	"license": "GPL-3.0-or-later",
	"keywords": [
		"WordPress",
		"theme",
		"hello-plus",
		"modern",
		"responsive"
	],
	"homepage": "https://github.com/theaminuli/hello-plus#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/theaminuli/hello-plus.git"
	},
	"bugs": {
		"url": "https://github.com/theaminuli/hello-plus/issues"
	},
	"devDependencies": {
		"@babel/core": "^7.28.4",
		"@babel/preset-env": "^7.28.3",
		"@wordpress/eslint-plugin": "^22.17.0",
		"@wordpress/stylelint-config": "^20.0.2",
		"babel-loader": "^10.0.0",
		"core-js": "^3.45.1",
		"css-loader": "^7.1.2",
		"eslint": "^8.57.1",
		"mini-css-extract-plugin": "^2.9.4",
		"style-loader": "^4.0.0",
		"stylelint": "^14.10.0",
		"webpack": "^5.101.3",
		"webpack-cli": "^6.0.1",
		"webpack-dev-server": "^5.2.2"
	},
	"scripts": {
		"build": "webpack --mode production",
		"dev": "webpack --mode development",
		"watch": "webpack --mode development --watch",
		"serve": "webpack serve --mode development",
		"lint:css": "stylelint **/*.css -i .gitignore",
		"lint:css:fix": "stylelint **/*.css -i .gitignore --fix",
		"lint:js": "eslint src/**/*.js --no-error-on-unmatched-pattern",
		"lint:js:fix": "eslint src/**/*.js --fix --no-error-on-unmatched-pattern",
		"lint": "npm run lint:css && npm run lint:js",
		"lint:fix": "npm run lint:css:fix && npm run lint:js:fix",
		"format": "npm run lint:fix",
		"lint:php": "composer run lint",
		"lint:php:fix": "composer run lint:fix",
		"format:php": "composer run format",
		"check:php": "composer run check"
	}
}
