{
	"name": "hello-plus",
	"private": true,
	"version": "1.0.2",
	"description": "Hello Plus is a lightweight, fast, and customizable WordPress theme built for speed and flexibility",
	"author": "theaminuli",
	"license": "GPL-3.0-or-later",
	"keywords": [
		"WordPress",
		"theme",
		"hello-plus",
		"modern",
		"responsive"
	],
	"homepage": "https://github.com/theaminuli/hello-plus#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/theaminuli/hello-plus.git"
	},
	"bugs": {
		"url": "https://github.com/theaminuli/hello-plus/issues"
	},
	"devDependencies": {
		"@actions/core": "^1.11.1",
		"@wordpress/scripts": "^30.24.0",
		"concurrently": "^9.2.1",
		"path": "^0.12.7",
		"simple-git": "^3.28.0",
		"webpack-cli": "^6.0.1",
		"webpack-remove-empty-scripts": "^1.0.4"
	},
	"scripts": {
		"build": "wp-scripts build",
		"dev": "wp-scripts start",
		"lint:css": "wp-scripts lint-style 'src/**/*.{css,scss}' '*.css'",
		"lint:js": "wp-scripts lint-js 'src/**/*.js'",
		"format": "wp-scripts format '**/*.{js,css,scss,php}'",
		"format:php": "composer run format",
		"lint:php": "composer run lint",
		"lint:php:fix": "composer run lint:fix",
		"check:php": "composer run check",
		"packages-update": "wp-scripts packages-update",
		"update-version": "node update-version-and-changelog.js",
		"plugin-zip": "wp-scripts plugin-zip",
		"zip": "concurrently \"wp-scripts build\" && composer archive --file=../dist/hello-plus"
	}
}
